{
  "name": "no-toxicity-extension",
  "version": "1.0.0",
  "description": "Remove all toxic texts",
  "dependencies": {
    "@tensorflow-models/universal-sentence-encoder": "^1.3.3",
    "@tensorflow/tfjs": "^4.22.0"
  },
  "devDependencies": {
    "webpack": "^5.95.0",
    "webpack-cli": "^5.1.4"
  },
  "scripts": {
    "build:chrome": "cp manifests/manifest.chrome.json manifest.json && npm run build",
    "build:firefox": "cp manifests/manifest.firefox.json manifest.json && npm run build",
    "build": "npx webpack",
    "convert:model": "mkdir -p use_model_extension && tensorflowjs_converter --input_format=keras ./ext_training/toxic_comment_model.h5 use_model_extension"
  }
}
