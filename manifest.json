{
  "description": "Remove all toxic texts",
  "manifest_version": 2,
  "name": "No toxicity",
  "version": "1.0",
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "lib/tf.min.js",
        "noToxicity.js"
      ],
      "run_at": "document_end"
    }
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_icon": {
      "48": "icons/icon-48.png",
      "96": "icons/icon-96.png"
    },
    "default_title": "Analyze Text Blocks",
    "default_popup": "popup.html"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "<all_urls>"
  ],
  "applications": {
    "gecko": {
      "id": "jordan.josserand@grenoble-inp.org"
    }
  }
}